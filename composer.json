{
  "name": "yiimaker/yii2-banner",
  "description": "Extension for creation of banners for site",
  "keywords": ["yii2", "advertising", "banner"],
  "type": "yii2-extension",
  "license": "BSD-3-Clause",
  "support": {
    "source": "https://github.com/yiimaker/yii2-banner",
    "issues": "https://github.com/yiimaker/yii2-banner/issues"
  },
  "authors": [
    {
      "name": "Vladimir Kuprienko",
      "email": "vldmr.kuprienko@gmail.com",
      "role": "Developer"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "require": {
    "php": ">=5.6.0",
    "yiisoft/yii2": "^2.0.0",
    "yiisoft/yii2-bootstrap": "~2.0.0",
    "motion/yii2-language-provider": "~1.0",
    "creocoder/yii2-translateable": "~1.0"
  },
  "require-dev": {
    "codeception/codeception": "~2.3",
    "codeception/verify": "*",
    "codeception/specify": "*"
  },
  "autoload": {
    "psr-4": {
      "ymaker\\banner\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ymaker\\banner\\tests\\": "tests/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "scripts": {
    "test": [
      "codecept build",
      "codecept run"
    ]
  }
}